{
  "name": "solana-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Solana Anchor + Next.js monorepo",
  "workspaces": [
    "app",
    "programs/*",
    "tests"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=app",
    "build": "npm run build --workspace=app",
    "test": "npm test --workspace=tests",
    "anchor:build": "anchor build",
    "anchor:test": "anchor test",
    "anchor:deploy": "anchor deploy"
  }
}
